<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_bar">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/nav_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bg_navbar"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingHorizontal="0dp"
        android:paddingTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/home_icon"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:background="@drawable/bg_button_active"
            android:contentDescription=" "
            android:drawableBottom="@drawable/ic_home"
            android:paddingStart="20dp"
            android:paddingTop="22dp"
            android:paddingEnd="20dp"
            android:paddingBottom="22dp" />

        <Button
            android:id="@+id/study_icon"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:background="@null"
            android:contentDescription=" "
            android:drawableBottom="@drawable/ic_study"
            android:paddingStart="20dp"
            android:paddingTop="22dp"
            android:paddingEnd="20dp"
            android:paddingBottom="22dp" />

        <Button
            android:id="@+id/create_task_icon"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:contentDescription=" "
            android:drawableBottom="@drawable/ic_create_task"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="15dp" />


        <Button
            android:id="@+id/report_icon"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:background="@null"
            android:contentDescription=" "

            android:drawableBottom="@drawable/ic_report"
            android:paddingStart="24dp"
            android:paddingTop="22dp"
            android:paddingEnd="24dp"
            android:paddingBottom="22dp" />


        <Button
            android:id="@+id/account_icon"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:background="@null"
            android:contentDescription=" "
            android:drawableBottom="@drawable/ic_account"
            android:paddingStart="20dp"
            android:paddingTop="22dp"
            android:paddingEnd="20dp"
            android:paddingBottom="22dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>