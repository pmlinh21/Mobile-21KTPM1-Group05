<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/verify_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify your email address"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/code_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:weightSum="6"
        app:layout_constraintTop_toBottomOf="@id/verify_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/code_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/code_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/code_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/code_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/code_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/code_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:text="Verify"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_corner_green"
        app:layout_constraintTop_toBottomOf="@id/code_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/resend_code_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:textAllCaps="false"
        android:text="Resend code"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/verify_button"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>